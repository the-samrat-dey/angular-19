{
  "*.{js,jsx,ts,tsx}": ["npm run prettier:fix", "npm run lint:fix"],
  "*.html": ["npm run prettier:fix", "npm run lint:fix"],
  "*.{css,scss,sass,less}": [
    "stylelint --fix",
    "stylelint --max-warnings 0 || exit 1",
    "npm run prettier:fix"
  ],
  "*.{json,md,yml,yaml}": ["npm run prettier:fix"]
}
